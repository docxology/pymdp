{
    "model": {
        "hierarchy_levels": 3,
        "latent_dims": [256, 64, 16],
        "activation": "relu",
        "normalization": "batch_norm",
        "dropout_rate": 0.1
    },
    "data": {
        "batch_size": 128,
        "train_val_split": 0.9,
        "num_workers": 4,
        "pin_memory": true
    },
    "training": {
        "n_epochs": 50,
        "batch_size": 128,
        "learning_rate": 0.001,
        "log_interval": 10000,
        "checkpoint_interval": 5,
        "latent_dim": 64,
        "validation_interval": 5,
        "early_stopping": {
            "patience": 10,
            "min_delta": 0.001
        },
        "optimizer": {
            "type": "adam",
            "betas": [0.9, 0.999],
            "weight_decay": 1e-5
        },
        "scheduler": {
            "type": "plateau",
            "factor": 0.5,
            "patience": 5,
            "min_lr": 1e-6
        }
    },
    "visualization": {
        "plot_frequency": 5,
        "save_samples": true,
        "n_samples": 100,
        "plot_types": [
            "loss_curves",
            "accuracy_curves",
            "confusion_matrix",
            "latent_space",
            "reconstructions"
        ]
    },
    "logging": {
        "level": "INFO",
        "format": "%(asctime)s | %(levelname)8s | %(name)s | %(message)s",
        "file_logging": {
            "enabled": true,
            "filename": "rgm_mnist.log",
            "max_bytes": 10485760,
            "backup_count": 5
        }
    },
    "experiment": {
        "name": "rgm_mnist",
        "description": "RGM MNIST digit recognition pipeline",
        "tags": ["mnist", "rgm", "digit_recognition"],
        "save_dir": "experiments",
        "random_seed": 42
    }
} 